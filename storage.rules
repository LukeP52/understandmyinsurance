// Firebase Storage Security Rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Authenticated users can read/write files in their own folder
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Anonymous users can read/write files in the anonymous-user folder
    match /users/anonymous-user/{allPaths=**} {
      allow read, write: if true;
    }
  }
}